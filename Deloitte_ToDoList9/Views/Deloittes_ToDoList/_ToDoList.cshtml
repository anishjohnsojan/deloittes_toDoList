@model IEnumerable<Deloitte_ToDoList9.Models.Deloittes_ToDoList>

@section Scripts{
    <script src="~/Deloitte_ToDoListScripts/CheckBoxEventListener.js"></script>
}
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Task_Date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Task)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Task_Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Task_IsChecked)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Task_LastUpdated_Date)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Task_Date, new { id = item.Task_Id })
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Task, new { id = item.Task_Id })
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Task_Description, new { id = item.Task_Id })
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Task_IsChecked, new { id = item.Task_Id, @class = "IsChecked" })
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Task_LastUpdated_Date, new { id = item.Task_Id })
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Task_Id }) |
                @*@Html.ActionLink("Details", "Details", new { id = item.Task_Id }) |*@
                @Html.ActionLink("Delete", "Delete", new { id = item.Task_Id })
            </td>
        </tr>
    }

</table>

